<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "フォロー中", class: "btn btn-unfollow" %>
  <script type="text/javascript">
    $('.btn-unfollow').on({
      'mouseenter': function() {
        $('.btn-unfollow').val('解除')
      },
      'mouseleave': function() {
        $('.btn-unfollow').val('フォロー中')
      }
    })
  </script>
<% end %>
