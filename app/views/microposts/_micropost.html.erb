<li id="micropost-<%= micropost.id %>">
  <%= link_to "", "/microposts/#{micropost.id}", remote: true, class: "micropost-link" %>
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user, class: "inlink" %>
  <span class="user">
    <%= link_to micropost.user.name, micropost.user, class: "inlink" %> |
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <div class="stream-item-footer">
    <span class="like glyphicon glyphicon-heart-empty"> <%= micropost.likes.count %></span>
     | <span class="glyphicon glyphicon-comment"> <%= micropost.comments.count %></span>
    <% if current_user?(micropost.user) %>
     | <%= link_to "", micropost, method: :delete,
                                       data: { confirm: "You sure?" }, class: "glyphicon glyphicon-trash" %>
    <% end %>
    <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span>
  </div>
</li>
