
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="microposts">
      <%= link_to gravatar_for(@micropost.user, size: 80), @micropost.user %>
      <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
      <%= render "users/follow_form" %>
      <span class="content">
        <%= @micropost.content %>
        <%= image_tag @micropost.picture.url if @micropost.picture? %>
      </span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
        <% if current_user?(@micropost.user) %>
          <%= link_to "delete", @micropost, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
      </span>
    </div>
    <div class="comment-form">
      <%= gravatar_for(current_user, size: 50) %>
      <textarea placeholder="コメントを書く..."></textarea>
      <div class="aaaaa">
        <input type="submit" name="commit" value="ツイート" class="btn btn-primary" data-disable-with="Post">
      </div>
    </div>
  </div>
</div>
